<div class="container">
  <h1>Bookmarks</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, collection: Movie.all, prompt: "Choose a movie", as: :radio_buttons %>
  <%= f.input :comment, placeholder: "Enter a comment about the movie" %>
  <%= f.submit "Add movie" %>
  <% end %>
</div>
